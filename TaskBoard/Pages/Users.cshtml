@page
@model TaskBoard.Pages.Users

@{
}

<h1>Users</h1>

<form method="post">
<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Id</th>
        <td></td>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.UserDetails)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.UserId</td>
            <td><button type="submit" class="btn btn-danger" asp-page-handler="DeleteUser" asp-route-userId="@user.Id">Delete</button></td>
        </tr>
    }
    </tbody>
</table>
</form>